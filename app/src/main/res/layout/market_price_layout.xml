<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingBottom="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_market_price"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/grey">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/tv_veg_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="@dimen/_10sdp"
               android:text="Brinjal"
               android:textSize="@dimen/_15sdp"
               android:textColor="@color/black">

           </TextView>

           <ImageView
               android:id="@+id/iv_location"
               android:layout_width="@dimen/_12sdp"
               android:layout_height="@dimen/_12sdp"
               app:layout_constraintTop_toBottomOf="@+id/tv_veg_name"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@+id/tv_location"
               android:layout_marginStart="@dimen/_19sdp"
               android:background="@drawable/location">

           </ImageView>

           <TextView
               android:id="@+id/tv_location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/tv_veg_name"
               app:layout_constraintStart_toEndOf="@id/iv_location"
               android:text="Bhavnager"
               android:textSize="@dimen/_10sdp"
               android:textColor="@color/black">

           </TextView>

           <TextView
               android:id="@+id/tv_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/iv_location"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:text="Rs 900/Q"
               android:textSize="@dimen/_15sdp"
               android:textColor="@color/black">

           </TextView>

       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/cv_market_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>